<div class="login_form">
<h2>Inscrever-se</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>

  <div class="field">
    <%= f.label :sobrenome %><br />
    <%= f.text_field :sobrenome %>
  </div>

  <div class="field">
    <%= f.label :cpf %><br />
    <%= f.text_field :cpf %>
  </div>

  <div class="field">
    <%= f.label :telefone %><br />
    <%= f.text_field :telefone %>
  </div>

  <div class="field">
    <%= f.label :rua %><br />
    <%= f.text_field :rua %>
  </div>

  <div class="field">
    <%= f.label :bairro %><br />
    <%= f.text_field :bairro %>
  </div>

  <div class="field">
    <%= f.label :numero_endereco %><br />
    <%= f.number_field :numero_endereco %>
  </div>

  <div class="field">
    <%= f.label :cep %><br />
    <%= f.text_field :cep %>
  </div>

  <div class="field">
    <%= f.label :referencia %><br />
    <%= f.text_field :referencia %>
  </div>

  <div class="field">
    <%= f.label :senha %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres necess√°rios)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :confirme_sua_senha %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Inscrever-se" , class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "usuarios/shared/links" %>
</div>