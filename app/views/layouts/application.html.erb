<!DOCTYPE html>
<html>
  <head>
    <title>Craftstore</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
    
  </body>
  <div class="footer">
    <p class="navbar-text pull-right">
    <% if usuario_signed_in? %>
      Logado como: <strong><%= current_usuario.email %></strong>.
      <%= link_to 'Editar perfil', edit_usuario_registration_path, :class => 'navbar-link' %> |
      <%= link_to "Logout", destroy_usuario_session_path, method: :delete, :class => 'navbar-link'  %>
    <% end %>
  </div>
</html>
